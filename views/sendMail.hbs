<div class="container">
	<div class="row mail-div">
		<form action="" class="col-xs-12" id="mail-form">
			<div class="form-group">
				<label for="emails">Emails</label>
				<input type="email" id="emails" name="emails" placeholder="Emails" required>
				<small id="emailsHelp" class="form-text text-muted">Seperate multiple emails with commas</small>
			</div>
			<div class="form-group">
				<label for="subject">Subject</label>
				<input type="text" id="subject" name="subject" placeholder="Subject">
			</div>
			<div class="form-group">
				<label for="text">Text</label>
				<input type="text" id="text" name="text" placeholder="Enter the content of the email here...">
			</div>
			<button type="submit" class="btn btn-success" id="submit-mail">Send Mails</button>
		</form>
		<a href="/client"><button class="btn btn-primary">Logout</button></a>
	</div>
	<div class="message">{{message}}</div>
	{{!-- <script src="/js/dist/main.js"></script> --}}
</div>